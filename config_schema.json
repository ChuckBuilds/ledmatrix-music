{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable or disable this plugin"
    },
    "music": {
      "type": "object",
      "description": "Music player settings",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable music display"
        },
        "POLLING_INTERVAL_SECONDS": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 30,
          "description": "How often to poll for music updates (seconds)"
        },
        "preferred_source": {
          "type": "string",
          "enum": ["spotify", "ytm"],
          "default": "spotify",
          "description": "Preferred music source (spotify or ytm)"
        },
        "YTM_COMPANION_URL": {
          "type": "string",
          "default": "http://localhost:9863",
          "description": "YouTube Music companion server URL"
        },
        "show_album_art": {
          "type": "boolean",
          "default": true,
          "description": "Show album artwork"
        },
        "show_progress_bar": {
          "type": "boolean",
          "default": true,
          "description": "Show playback progress bar"
        },
        "show_album_name": {
          "type": "boolean",
          "default": true,
          "description": "Show album name"
        },
        "text_scroll_speed": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Text scrolling speed (lower = faster)"
        },
        "max_album_art_size": {
          "type": "number",
          "default": 32,
          "minimum": 16,
          "maximum": 64,
          "description": "Maximum size for album artwork"
        }
      },
      "additionalProperties": false
    },
    "spotify": {
      "type": "object",
      "description": "Spotify configuration",
      "properties": {
        "SPOTIFY_CLIENT_ID": {
          "type": "string",
          "description": "Spotify API client ID"
        },
        "SPOTIFY_CLIENT_SECRET": {
          "type": "string",
          "description": "Spotify API client secret"
        },
        "SPOTIFY_REDIRECT_URI": {
          "type": "string",
          "default": "http://localhost:8888/callback",
          "description": "Spotify OAuth redirect URI"
        }
      },
      "additionalProperties": false
    },
    "youtube_music": {
      "type": "object",
      "description": "YouTube Music configuration",
      "properties": {
        "YTM_COMPANION_TOKEN": {
          "type": "string",
          "description": "YouTube Music companion authentication token"
        }
      },
      "additionalProperties": false
    },
    "display_duration": {
      "type": "number",
      "default": 10,
      "minimum": 1,
      "maximum": 300,
      "description": "How long to display music in seconds"
    },
    "update_interval": {
      "type": "integer",
      "default": 2,
      "minimum": 1,
      "maximum": 30,
      "description": "How often to update music data in seconds"
    }
  },
  "required": ["enabled"],
  "additionalProperties": false
}

